{
  "version": "9.9.8.8998",
  "default_locale": "en",
  "description": "A chrome extension for taking screenshots and combining them into a single PDF on the MATLAB website.",
  "short_name": "screen capture",
  "manifest_version": 2,
  "minimum_chrome_version": "43",
  "name": "MatCapture",
  "offline_enabled": true,
  "options_page": "options.html",
  "incognito": "spanning",
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_icon": {
      "16": "icon.png",
      "24": "icon.png",
      "32": "icon.png"
    }
  },
  "icons": {
    "128": "icon.png",
    "48": "icon.png",
    "32": "icon.png",
    "16": "icon.png"
  },
  "commands": {
    "start_tab_video": {
      "description": "Start recording tab/page",
      "suggested_key": {
        "default": "Ctrl+Shift+7",
        "mac": "Command+Shift+7"
      }
    },
    "start_desktop_video": {
      "description": "Start recording desktop",
      "suggested_key": {
        "default": "Ctrl+Shift+8",
        "mac": "Command+Shift+8"
      }
    },
    "stop_video": {
      "description": "Stop video recording",
      "suggested_key": {
        "default": "Ctrl+Shift+9",
        "mac": "Command+Shift+9"
      }
    },
    "pause_video": {
      "description": "Pause video recording",
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      }
    }
  },
  "permissions": [
    "https://matlab.mathworks.com/",
    "downloads",
    "tabs",
    "activeTab",
    "storage",
    "unlimitedStorage",
    "contextMenus",
    "desktopCapture",
    "tabCapture",
    "clipboardWrite",
    "identity"
  ],
  "web_accessible_resources": [
    "favicon.png",
    "print.html",
    "blank.html",
    "fonts/*",
    "images/*",
    "css/*",
    "js/*",
    "template/*"
  ]
}
